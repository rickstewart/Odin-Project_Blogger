<!DOCTYPE html>
<html>
<head>
  <title>Odin Project: Blogger</title>

  <%= stylesheet_link_tag "application",  media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="container">
  <div id="content">
    <%= yield %>
    <hr>
    <h6>
      <% if logged_in? %>
          <%= "Logged in as #{current_user.email}" %>
          <%= link_to "(logout)", logout_path %>
      <% else %>
          <%= link_to "(login)", login_path %>
          <span id="colorText">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;*** Hint</span><span id="colorText2">&nbsp;&nbsp; user: 'admin@alien.com'  password: 'password'</span>
      <% end %>
    </h6>
  </div>
</div>
</body>
</html>
